<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.temporary.demoproject.qmuidemo.QMUIProgressBarActivity">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:qmui_topbar_bg_color="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <com.qmuiteam.qmui.widget.QMUIProgressBar
            android:id="@+id/qmui_progressbar"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:textColor="@color/colorPrimary"
            android:textSize="22dp"
            app:qmui_background_color="@android:color/holo_green_light"
            app:qmui_progress_color="@color/colorPrimary"
            app:qmui_stroke_width="18dp"
            app:qmui_type="type_circle" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/qmui_progressbar_value_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:padding="10dp"
            android:textColor="@drawable/qmui_button_border_color"
            app:qmui_borderColor="@drawable/qmui_button_border_color"
            app:qmui_isRadiusAdjustBounds="true" /><!--android:text="@string/qmui_progressbar_value_button"-->
    </LinearLayout>
</LinearLayout>
