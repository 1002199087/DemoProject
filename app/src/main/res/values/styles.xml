<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="mQmUI" parent="QMUI.Compat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="QMUITopBarStyle">@style/m_topbar</item>
        <item name="styleLoadingLayout">@style/LoadingLayoutStyle</item>
        <item name="qmui_bottom_sheet_list_item_text_appearance">
            @style/m_bottom_sheet_list_item
        </item>
    </style>

    <style name="m_bottom_sheet_list_item" parent="QMUITextAppearance.ListItem">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="m_topbar" parent="QMUI.TopBar">
        <item name="qmui_topbar_title_color">@android:color/white</item>
        <item name="qmui_topbar_left_back_drawable_id">@drawable/topbar_back_icon</item>
    </style>

    <style name="m_dialog_style" parent="QMUI.Dialog">
        <item name="qmui_dialog_title_style">@style/m_dialog_title_style</item>
        <item name="qmui_dialog_action_style">@style/m_dialog_action_style</item>
        <item name="qmui_dialog_action_container_style">@style/m_dialog_action_container_style
        </item>
    </style>

    <style name="m_dialog_title_style" parent="QMUI.Dialog.Title">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="m_dialog_action_style" parent="QMUI.Dialog.Action">
        <item name="android:gravity">center</item>
    </style>

    <style name="m_dialog_action_container_style" parent="QMUI.Dialog.ActionContainer">
        <item name="qmui_dialog_action_container_justify_content">stretch</item>
    </style>

    <style name="m_textview_style_for_radiusimage">
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="anim_menu_bottombar">
        <item name="android:windowEnterAnimation">@anim/custom_in_anim</item>
        <item name="android:windowExitAnimation">@anim/custom_out_anim</item>
    </style>

    <style name="popup_spinner_anim">
        <item name="android:windowEnterAnimation">@anim/custom_popup_spinner_in_anim</item>
        <item name="android:windowExitAnimation">@anim/custom_popup_spinner_out_anim</item>
    </style>

    <style name="m_ratingstar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstar</item>
        <item name="android:width">10dp</item>
        <item name="android:height">10dp</item>
    </style>

    <style name="MyEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="SplashAppTheme" parent="android:Theme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/bg_splash</item><!--AppBaseTheme-->

        <!--<item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="LoadingLayoutStyle" parent="LoadingLayout.Style">
        <item name="llEmptyImage">@null</item>
        <item name="llErrorImage">@null</item>
    </style>
</resources>
